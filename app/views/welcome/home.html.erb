  <div class="jumbotron">
        <h1>gCamp</h1>
          <p style="margin-top: 25px">Your life, organized...your way</p>
  </div>


  <div class="row">
    <div class="col-md-4">
      <%= image_tag '1_umbrella.jpg', class:'img-rounded' %>
      <div class="panel panel-primary">
          <div class="panel-heading">Tasks</div>
          <div class="panel-body homePanel">Grouped by projects and lists. Just the way you like 'em</div>
      </div>
    </div>
    <div class="col-md-4">
      <%= image_tag '2_shoes.jpg', class:'img-rounded' %>
          <div class="panel panel-primary">
              <div class="panel-heading">Documents</div>
              <div class="panel-body homePanel">
                <ul>
                  <li>Upload</li>
                  <li>Comment</li>
                  <li>Revise</li>
                </ul>
              </div>
          </div>
      </div>
      <div class="col-md-4">
        <%= image_tag '3_legs.jpg', class:'img-rounded' %>
            <div class="panel panel-primary">
                <div class="panel-heading">Comments</div>
                <div class="panel-body homePanel">
                  <ul>
                      <li>Comment on tasks and documents.</li>

                      <li>Get email notifications</li>

                  </ul>
                </div>
            </div>
        </div>
      </div>
          <div class= "home_quotes">
            <p>
              <% @quotes.each do |quote| %>
                <p><%= quote.first %></p>
                <p><%= quote.last %></p>
              <% end %>
            </p>
          </div>
  </div>

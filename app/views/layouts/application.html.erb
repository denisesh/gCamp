          </div>
        </div>
      </nav>

      <div class="container">
        <%= yield =%>
      </div>

        <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
          <div class="container container-fluid">
            <div class="navbar-header">
              <h4>
                <%= link_to 'About', about_path %> |
                <%= link_to 'Terms', terms_path %> |
                <%= link_to 'Tasks', tasks_path %> |

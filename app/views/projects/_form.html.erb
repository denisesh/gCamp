<%= form_for @project, html: {class:"form-horizontal"} do |f| %>
  <div class="form-group">
    <%  f.label :name, class: "control-label col-sm-1" %>
    <div class="col-md-6">
      <% f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary col-sm-offset-1" %>
  </div>
<% end %>

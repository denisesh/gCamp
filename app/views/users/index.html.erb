  <div id="notice">
    <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
    <% end %>
  </div>


  <div class='page-header'>
    <div class="pull-right">
      <%= link_to 'Create New User', new_user_path, class: "btn btn-info" %>
    </div>
  </div>

  <div>
    <h1> Listing Users </h1>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <td><%= mail_to user.email %></td>
        <td><%= link_to "Edit", edit_user_path(user), class:"pull-right" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>
